                    <div class="card mb-1">
                        <div class="mb-1">
                            <p class="card-title capitalize"><%= coffee.item %></p>
                            <p class="card-cat"><%= coffee.type %></p>
                        </div>
                        <div class="row">
                            <p class="card-price">â‚±<%= coffee.price %></p>
                            <a href="/coffee?id=<%= coffee._id %>" class="link"><i class='bx bxs-pencil card-icon'></i></a>
                        </div>
                    </div>
                <% }) %>
            </div>
            
        </div>
    </section>

    <%- include('partials/nav.ejs') %>
</body>
</html>